<h1>Cards#index</h1>

<%= link_to "New card", new_world_card_path(world_id: @world.id) %> <br>
<%= link_to "Back to worlds", worlds_path %>

<%= form_tag world_cards_path, method: :get do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    placeholder: "Seperate tags by commas"
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>

<div class="cards">
  <% @cards.each do |card| %>
    <div class="card"
         data-controller="read">

      <div class="card-body">
        <h5 class="card-header card-title"><%= card.title %></h5>
        <h6 class="card-subtitle mb-2 text-muted">
        <% card.tags.each do |tag| %>
          <%= "##{tag.name.gsub(" ", "_")}" %>
        <% end %></h6>
          <% if (sanitize card.content).bytesize > 100 %>

            <p class="card-text"><%= sanitize card.content[0..160] %>
              <span class="dots"
                    data-target="read.dots">...</span>
              <span class="more"
                    data-target="read.more"><%= sanitize card.content[161..(sanitize card.content).bytesize] %></span>
            </p>

            <button class="btn btn-primary myBtn"
                    data-action="click->read#readMore">Read more</button>
          <% else %>
            <p class="card-text"><%= sanitize card.content %></p>
          <% end %>
        <div class="card-link"><%= link_to "Edit card", edit_world_card_path(world_id: card.world.id, id: card.id)  %></div>
        <div class="card-link"><%= link_to "Burn this card to cinders", world_card_path(world_id: card.world.id, id: card.id), method: :delete %></div>
      </div>
    </div>
  <% end %>
</div>

