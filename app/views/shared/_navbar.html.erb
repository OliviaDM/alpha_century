<div class="topnav">
  <%= link_to "home", root_path %>
  <%= link_to "about", about_path %>
  <%= link_to "contact", contact_path %>
  <div class="login-container">
    <% if user_signed_in? %>
      <% if controller.class.name == "CardsController" %>
        <%= link_to "notes", world_cards_path %>
        <a href="#">timeline view</a>
        <a href="#">map view</a>
      <% end %>
        <button type="button" class="dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          ACTION
        </button>
        <div class="dropdown-menu">
          <%= link_to "profile", profile_path, :class => "dropdown-item" %>
          <%= link_to "worlds", worlds_path, :class => "dropdown-item" %>
          <%= link_to "log out", destroy_user_session_path, method: :delete, :class => "dropdown-item logout" %>
        </div>
    <% else %>
      <button type="button" data-toggle="modal" data-target="#login">
        Log In
      </button>
      <button type="button" data-toggle="modal" data-target="#signup">
        Sign Up
      </button>
    <% end %>
  </div>
</div>

<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render 'devise/sessions/new' %>
</div>

<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <%= render 'devise/registrations/new' %>
</div>
